{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "twingate",
  "title": "Twingate",
  "description": "Access Twingate Admin functionality",
  "icon": "twingate-icon.png",
  "author": "stoopkidddd",
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "remote-networks",
      "title": "Remote Networks",
      "description": "List Remote Networks in your tenant",
      "mode": "view"
    },
    {
      "name": "resources",
      "title": "Resources",
      "description": "List Resources in your tenant",
      "mode": "view"
    },
    {
      "name": "groups",
      "title": "Groups",
      "description": "List Groups in your tenant",
      "mode": "view"
    },
    {
      "name": "service-accounts",
      "title": "Service Accounts",
      "description": "List Service Accounts in your tenant",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "tenantSlug",
      "type": "textfield",
      "required": true,
      "title": "Tenant Slug",
      "description": "The name of your tenant that you enter as a URL",
      "placeholder": "acme"
    },
    {
      "name": "apiKey",
      "type": "password",
      "required": true,
      "title": "API Key",
      "description": "Generate an API key from the admin console. Read-only is recommended.",
      "link": "https://www.twingate.com/docs/getting-started-with-the-api#generating-an-api-key",
      "placeholder": "Enter your API key here"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.76.1",
    "@raycast/utils": "^1.16.0",
    "date-fns": "^3.6.0",
    "graphql-request": "^6.1.0",
    "lodash": "^4.17.21",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/typescript": "^4.0.7",
    "@graphql-codegen/typescript-graphql-request": "^6.2.0",
    "@graphql-codegen/typescript-operations": "^4.2.1",
    "@parcel/watcher": "^2.4.1",
    "@raycast/eslint-config": "^1.0.8",
    "@types/lodash": "^4.17.5",
    "@types/node": "^20.14.5",
    "@types/react": "^18.3.3",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "graphql": "^16.8.2",
    "prettier": "^3.3.2",
    "react": "^18.3.1",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "generate": "graphql-codegen --config codegen.ts",
    "dev": "concurrently \"ray develop\" \"npm run generate -- --watch\"",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
